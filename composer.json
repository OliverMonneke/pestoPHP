{
    "name": "codersquad/pestophp",
    "type": "library",
    "description": "Simple PHP framework for creating fast web applications",
    "homepage": "http://github.com/Codersquad/pestoPHP",
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Monneke",
            "email": "oliver@codersquad.de",
            "homepage": "http://codersquad.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5",
        "codersquad/pennephp": "dev-develop"
    },
    "require-dev": {
        "phpunit/phpunit": "~4",
        "phpmd/phpmd": "*",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "Codersquad\\Pestophp\\": [ "src" ],
            "Codersquad\\Pestophp\\Tests\\": [ "tests" ]
        }
    },
    "config": {
        "bin-dir": "bin/"
    }
}
